<div {{bind-attr class=":projects-container :-half model.term.slug"}}>
	<ul>
		<li class="cd-single-project">
			<div class="cd-title">
				<p>
					{{#link-to 'index'}}
					Volver al indice
				{{/link-to}}
				</p>
				<small>Categoria</small>
				<h1>
					{{model.term.name}}
				</h1>
			</div> <!-- .cd-title -->
		</li>
	</ul>
</div> <!-- .project-container -->

<div class="chapters-container">
<ul class="cards">
	{{#each model.posts as |post|}}
	
		{{#link-to 'post.show' post.id class="card"}}
		<div class="card-image">
			<img {{bind-attr src=post.featured_image.source}}  >
		</div>
		<div class="card-copy">
			{{post-brief post=post}}
		</div>
		{{/link-to}}
	
	{{/each}}
</ul>
</div>
