<div class="projects-container -half">
	<ul>
		<li class="cd-single-project">
			<div class="cd-title">
				<h2>
				
				{{model.term.name}}
				</h2>
				<p>
					{{#link-to 'index'}}
					Indice
				{{/link-to}}
				</p>

			</div> <!-- .cd-title -->
		</li>

		
	</ul>
</div> <!-- .project-container -->

<div class="chapters-container">
<ul class="cards">
	{{#each model.posts as |post|}}
		
		<div class="card">
    <div class="card-image">
      <img {{bind-attr src=post.featured_image.source}}  >
    </div>
    <div class="card-copy">
     {{post-brief post=post}}
    </div>
  </div>
	{{/each}}
</ul>
</div>
