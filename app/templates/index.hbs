<div id="landing" class="projects-container">
	<ul>
		<li class="cd-single-project soberania_politica">
			<div class="cd-title">
				<figure class="effect">
					<img src="/assets/images/titulo-libro.svg" class="tapa-libro" alt="">
				</figure>
			</div> <!-- .cd-title -->
		</li>
		<li class="cd-single-project independencia_economica">
			<div class="cd-title">
				<figure class="effect">
					<figcaption>
					<ul class="home-politicas">
				{{#each model.items as |menuItem|}}
					{{#unless menuItem.parent}}
						{{wp-menu-item item=menuItem}}
					{{/unless}}
				{{/each}}
				</ul>
					</figcaption>
				</figure>
			</div> <!-- .cd-title -->
		</li>
		<li class="cd-single-project justicial_social" >
			<div class="cd-title">
				<figure class="effect buscador-home">
						<fieldset>
							{{input type="text" value=query placeholder="Ingrese su b√∫squeda"}}
						</fieldset>

						{{#if searching}}
							<div class="loading">
								{{loading-spin color='#cccccc' size=50}}
							</div>
						{{/if}}

						{{#if searched}}
							{{#if posts}}
								{{#perfect-scroll wheelSpeed=2}}
								
									{{#each posts as |post|}}
										{{post-brief post=post showCategory=true action='close' query=query highlighting=true}}
									{{/each}}
								
								{{/perfect-scroll}}
							{{else}}
								<div class="empty-data">
									{{fa-icon 'search'}}
									<i>No se han encontrado resultados.</i>
								</div>
							{{/if}}
						{{/if}}
					
				</figure>
			</div> <!-- .cd-title -->
		</li>
	</ul>
	<video autoplay  poster="http://somosfuturo.com.ar/contenido/wp-content/uploads/2015/08/500-landing.jpg" id="bgvid" loop>
		<source src="http://somosfuturo.com.ar/contenido/wp-content/uploads/NYC-1280.mp4" type="video/mp4">
	</video>
</div> <!-- .project-container -->
