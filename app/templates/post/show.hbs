<div {{bind-attr class=":projects-container :-half model.post.slug"}}>
	<div id="-post" class="cd-single-project" style="background-image:url({{post.featured_image.attachment_meta.sizes.large.url}})">
		<!--img {{bind-attr src=post.featured_image.source}} -->
		<div class="cd-title opacity">
			<nav>
				<ul>
					<li class="heading-term">Tenemos Patria, Tenemos Proyecto, Tenemos Futuro</li>
				</ul>
			</nav>

			<h1 class="heading-primary">{{{model.post.title}}}</h1>		

			{{#if model.post.isSomosFuturo}}
			<ul class="indice-subpolitica">
				<li> {{fa-icon 'long-arrow-right'}}{{deep-link href='constr-pol-economica' text="Conducción de la política económica" duration=20 target=".article-container" speed=2000}}</li>
				<li> {{fa-icon 'long-arrow-right'}}{{deep-link href='constr-pol-estado' text="Conducción política del estado" duration=20 target=".article-container" speed=2000}}</li>
				<li> {{fa-icon 'long-arrow-right'}}{{deep-link href='igualdad-social' text="Igualdad social" duration=200 target=".article-container" speed=2000}}</li>
			</ul>
			{{/if}}
			<ul class="navigation">{{post-navigate post=model.post posts=model.posts}}</ul>
		</div> <!-- .cd-title -->
	</div>	
</div> <!-- .project-container -->

<div {{bind-attr class=":article-container model.post.slug"}}>
	<nav class="breadcrumb">
		<ul>
			<li>{{#link-to 'index'}}{{fa-icon 'home'}}{{/link-to}}</li>
			{{show-terms post=model.post}}
		</ul>
	</nav>	


	<article class="type-system-slab ">
	
	 
		{{{model.post.content}}}

	</article>

	<div class="share">{{facebook-feed data-desc=model.post.shareText data-title=model.post.title data-image=model.post.featured_image.attachment_meta.sizes.medium.url data-caption="Somos futuro"}}</div>

	<ul class="navigation">{{post-navigate post=model.post posts=model.posts}}</ul>

</div>